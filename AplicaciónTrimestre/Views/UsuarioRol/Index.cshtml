@model IEnumerable<AplicaciónTrimestre.Models.usuariorol>

@{
    ViewBag.Title = "Usuario Rol";
}

<h2>Usuario Rol</h2>

<p>
    @Html.ActionLink("Crear Usuario Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.idUsuario)*@
            Usuario
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.idRol)*@
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.idUsuario)*@
                @AplicaciónTrimestre.Controllers.UsuarioRolController.NombreUsuario(item.idUsuario)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.idRol)*@
                @AplicaciónTrimestre.Controllers.UsuarioRolController.DescripcionRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if(!confirm('¿Esta seguro de eliminar?')) {
            event.preventDefault();
            }
        })
    </script>
}
