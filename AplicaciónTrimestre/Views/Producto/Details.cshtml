@model AplicaciónTrimestre.Models.producto

@{
    ViewBag.Title = "Detalles Producto";
}

<h2>Detalles</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.nombre)*@
            Nombre Producto:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.percio_unitario)*@
            Precio Unitario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.percio_unitario)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.descripcion)*@
            Deswcripción:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.cantidad)*@
            Cantidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.id_proveedor)*@
            Proveedor:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.id_proveedor)*@
            @AplicaciónTrimestre.Controllers.ProductoController.NombreProveedor(Model.id_proveedor)
        </dd>

        <dt>
            Imagen:
        </dt>

        <dd>
            <img class="img-responsive" src="@Url.Content("~/" + ViewBag.imagen)" alt="Image" />
            @*<img src="@Url.Content("~/" + ViewBag.imagen)" alt="Image" />*@
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
