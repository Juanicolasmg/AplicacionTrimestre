@model IEnumerable<AplicaciónTrimestre.Models.producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Crear Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.nombre)*@
            Nombre Producto
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.percio_unitario)*@
            Precio Unitario
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.descripcion)*@
            Descripción
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.cantidad)*@
            Cantidad
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.id_proveedor)*@
            Proveedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percio_unitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.id_proveedor)*@
            @AplicaciónTrimestre.Controllers.ProductoController.NombreProveedor(item.id_proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "linkDelete"})
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if(!confirm('¿Esta seguro de eliminar?')) {
            event.preventDefault();
            }
        })
    </script>
    }
