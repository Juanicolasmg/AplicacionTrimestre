@model IEnumerable<AplicaciónTrimestre.Models.compra>

@{
    ViewBag.Title = "Compras";
}

<h2>Compras</h2>

<p>
    @Html.ActionLink("Crear Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.fecha)*@
            Fecha Compra
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.total)*@
            Total
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.id_usuario)*@
            Nombre Usuario
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.id_cliente)*@
            Nombre Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.id_usuario)*@
                @AplicaciónTrimestre.Controllers.CompraController.NombreUsuario(item.id_usuario)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.id_cliente)*@
                @AplicaciónTrimestre.Controllers.CompraController.NombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if(!confirm('¿Esta seguro de eliminar?')) {
            event.preventDefault();
            }
        })
    </script>
}
