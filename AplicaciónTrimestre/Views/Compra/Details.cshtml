@model AplicaciónTrimestre.Models.compra

@{
    ViewBag.Title = "Detalles Compra";
}

<h2>Detalles</h2>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.fecha)*@
            Fecha Compra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.total)*@
            Total:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.id_usuario)*@
            Nombre Usuario:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.id_usuario)*@
            @AplicaciónTrimestre.Controllers.CompraController.NombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.id_cliente)*@
            Nombre Cliente:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.id_cliente)*@
            @AplicaciónTrimestre.Controllers.CompraController.NombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
