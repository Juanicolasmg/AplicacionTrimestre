@model AplicaciónTrimestre.Models.producto_compra

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Producto Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.id_compra)*@
            Fecha Compra:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.id_compra)*@
            @AplicaciónTrimestre.Controllers.ProductoCompraController.FechaCompra(Model.id_compra)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.id_producto)*@
            Nombre Producto:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.id_producto)*@
            @AplicaciónTrimestre.Controllers.ProductoCompraController.NombreProductos(Model.id_producto)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.cantidad)*@
            Cantidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
